/* components/my-button/my-button.wxss */

/* 去除默认button样式 */
button::after {
  border: none;
}

/* 我的样式 */
.default-button {
  width: 540rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(to right, #fe996f 0%,#f6705a 100%); 
  font-size: 26rpx;
  color: #fff;
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0.30);
}
.mini {
  width: 360rpx;
}
.no-background {
  background: none;
  color: #F6705A;
  box-shadow: none;
  border: 3rpx solid #F6705A;
}
.no-gradient {
  background: #f6705a;
}